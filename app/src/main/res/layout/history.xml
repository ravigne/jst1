<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">
    <?xml version="1.0" encoding="utf-8"?>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_margin="5dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        app:cardMaxElevation="10dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        tools:ignore="MissingConstraints">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Today,1:30 PM"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rs.480"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_alignParentEnd="true" />

            <ImageView
                android:layout_marginTop="77dp"
                android:layout_marginRight="70dp"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/tick" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="70dp"
                android:text="Delivered"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_alignParentEnd="true" />

            <TextView
                android:textSize="10sp"
                android:id="@+id/place"
                android:layout_margin="10dp"
                android:layout_below="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sanjaynagar"

               />
            <TextView
                android:textSize="10sp"
                android:layout_margin="10dp"
                android:layout_below="@+id/place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sanjaynagar"/>
            <TextView
                android:id="@+id/dot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:text="- - - - - - - - - - - - - - - - - - - - - - -  - - - -  - - - - - - - -  -  - - - - -  - - - - - -"
                />
            <com.google.android.material.imageview.ShapeableImageView
                android:src="@color/red"
                android:layout_below="@+id/dot"
                android:layout_width="25dp"
                android:layout_height="25dp"
                />
            <TextView
                android:layout_marginLeft="40dp"
                android:id="@+id/rest"
                android:layout_below="@id/dot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Meghana Food's"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold" />
            <TextView
                android:textSize="10sp"
                android:layout_marginLeft="40dp"
                android:layout_below="@id/rest"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:text="Chicken Biryan X1,Special Chicken Kabab Biryani x 1"
             />
            <TextView
                android:layout_marginRight="70sp"
                android:id="@+id/delivered"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/dot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delivered By"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="70sp" />
            <TextView
                android:layout_alignParentEnd="true"
                android:textSize="10sp"
                android:layout_below="@id/delivered"
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:text="Arun k"
                android:layout_alignParentRight="true"
                tools:ignore="SmallSp" />
            <com.google.android.material.imageview.ShapeableImageView
                android:layout_alignParentEnd="true"
                android:layout_marginRight="145sp"
                android:src="@drawable/boy"
                android:layout_below="@+id/dot"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true" />
            <androidx.appcompat.widget.AppCompatButton
                android:background="@drawable/box"
                android:text="Order Again"
                android:layout_marginTop="30dp"
                android:layout_below="@id/rest"
                android:layout_width="150dp"
                android:layout_height="50dp"

                />
            <androidx.appcompat.widget.AppCompatButton
               android:background="@drawable/star"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="30dp"
                android:layout_below="@id/rest"
                android:layout_width="150dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true" />


        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>